# Growth Worker Configuration
PORT=3002

# API Key for authentication (generate with: openssl rand -base64 32)
GROWTH_API_KEY=your-secret-key-here

# Supabase (service_role key — full DB access, never expose to client)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# LLM Provider (openai-compatible — works with OpenAI, Anthropic via proxy, etc.)
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4o

# Google APIs
GOOGLE_PLACES_API_KEY=your-google-places-key-here

# Google Ads API (for Keyword Planner — Phase 1 stub, Phase 2 real)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=

# Serper.dev (SERP analysis — Phase 2, feature-flagged)
SERPER_API_KEY=
GROWTH_SERP_ENABLED=false
